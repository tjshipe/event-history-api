{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019"],
    "module": "commonjs",
    "outDir": "dist",
    "allowJs": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
   },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
}
