{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true, 
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
   },
  "include": ["src/**/*.ts", "src/**/*.json", "lib/**/*.ts"],
  "exclude": ["node_modules"],
}
